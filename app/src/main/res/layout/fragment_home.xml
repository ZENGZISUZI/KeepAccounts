<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zengsu.example.com.keepaccounts.fragment.HomeFragment"
    android:background="@drawable/home_back"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/add_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+12333"
            android:gravity="right"
            android:textSize="25sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="142dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="105dp"
             />
        <TextView
            android:id="@+id/desc_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-124444443"
            android:textSize="25sp"
            android:layout_marginTop="25dp"
            android:layout_alignTop="@+id/add_sum"
            android:layout_alignRight="@+id/add_sum"
            android:layout_alignEnd="@+id/add_sum"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_____________"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/desc_sum"
            android:layout_alignRight="@+id/desc_sum"
            android:layout_alignEnd="@+id/desc_sum" />
        <TextView
            android:id="@+id/sum"
            android:text="0000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_sum"
            android:layout_marginTop="30dp"
            android:layout_alignTop="@+id/desc_sum"
            android:layout_alignRight="@+id/desc_sum"
            android:layout_alignEnd="@+id/desc_sum"
           />
    </RelativeLayout>



</FrameLayout>
